<div>
    <h2>Экология - наше все!</h2>
    <div class="row">
        <div class="col-md-4">
            <p>
                <h4>
                    @{
                        Random rnd = new Random();
                        int first = rnd.Next(0, facts.Count);
                    }
                    @facts[first];
                </h4>
            </p>
        </div>
        <div class="col-md-4">
            <p>
                <h4>
                    @{
                        int second = rnd.Next(0, facts.Count);
                        while (second == first)
                        {
                            second = rnd.Next(0, facts.Count);
                        }
                    }
                    @facts[second];
                </h4>
            </p>
        </div>
        <div class="col-md-4">
            <p>
                <h4>
                    @{ 
                        int third = rnd.Next(0, facts.Count);
                        while (third == first || third == second)
                        {
                            third = rnd.Next(0, facts.Count);
                        }
                    }
                    @facts[third];
                </h4>
            </p>
        </div>
    </div>
</div>