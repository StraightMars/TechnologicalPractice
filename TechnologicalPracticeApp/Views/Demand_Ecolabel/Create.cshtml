@model TechnologicalPracticeApp.Models.Demand_Ecolabel

@{
    ViewBag.Title = "Create";
}

<h2>Добавление связи Экомаркировка - Требование</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.EcolabelID, "Экомаркировка", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("EcolabelID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.EcolabelID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DemandID, "Правило маркирования", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("DemandID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DemandID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Добавить связь" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("К списку требований", "Index", "Demands")
</div>
<div>
    @Html.ActionLink("К списку маркировок", "IndexAdmin", "Ecolabels")
</div>
<div>
    @Html.ActionLink("Вернуться к списку связей", "Index");
</div>
