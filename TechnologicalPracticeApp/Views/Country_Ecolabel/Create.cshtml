@model TechnologicalPracticeApp.Models.Country_Ecolabel

@{
    ViewBag.Title = "Create";
}

<h2>Добавление связи Экомаркировка - Страна действия</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            @Html.LabelFor(model => model.EcolabelID, "Экомаркировка", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Label("ViewBag.EcolabelName");
                @*@Html.TextBoxFor(model => model.EcolabelID, new { disabled = "disabled", @readonly = "readonly", placeholder = ""})*@
                @*@Html.EditorFor(model => model.EcolabelID, htmlAttributes: new { disabled = "disabled", @readonly = "readonly"})*@
                @Html.DropDownList("EcolabelID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.EcolabelID, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.CountryID, "Страна действия", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("CountryID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CountryID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Добавить" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("К списку стран", "Index", "Countries")
</div>
<div>
    @Html.ActionLink("К списку маркировок", "IndexAdmin", "Ecolabels")
</div>
<div>
    @Html.ActionLink("Вернуться к списку связей", "Index");
</div>